<Window x:Class="tsAudioLib.EditEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tsAudioLib"
        mc:Ignorable="d"
        Title="Eintrag bearbeiten" Height="450" Width="800" SizeToContent="Height"
        d:DataContext="{d:DesignInstance local:EditEntryWindow, IsDesignTimeCreatable=True}">
    <StackPanel>
        <TextBlock Text="Name"/>
        <TextBox Text="{Binding AudioName}"/>
        <TextBlock Text="Pfad"/>
        <TextBox Text="{Binding Path}"/>
        <Button Content="Auswählen (Datei)" Name="btnBrowse" Click="btnBrowse_Click"/>
        <TextBlock Text="Kategorie"/>
        <ComboBox ItemsSource="{Binding AvailableCategories}" SelectedItem="{Binding Category}"/>
        <TextBlock Text="Aufnahmedatum"/>
        <DatePicker SelectedDate="{Binding RecordDate}"/>
        <TextBlock Text="Tags"/>
        <TextBox Text="{Binding EnumeratedTags}"/>
        <Separator/>
        <Button Content="OK" Name="btnOK" Click="btnOK_Click"/>
        <Button Content="Abbrechen" Name="btnCancel" Click="btnCancel_Click"/>
    </StackPanel>
</Window>
